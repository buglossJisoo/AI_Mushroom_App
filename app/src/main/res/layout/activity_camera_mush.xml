<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8F4D4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F4D4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mush_image"
            android:layout_width="match_parent"
            android:layout_height="402dp"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_button"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="#FFFCFC"
                android:text="사진 업로드"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <ListView
                android:id="@+id/lv_probabilities"
                android:layout_width="397dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:divider="@null"
                android:dividerHeight="0dp">

            </ListView>

            <!--  <TextView
                  android:id="@+id/mush_output"
                  android:layout_width="match_parent"
                  android:layout_height="32dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:textColor="#000000" />-->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mush_name"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="버섯 이름: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/mname"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mush_type"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="버섯 종류: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/mtype"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:textColor="#000000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mush_sym"
                android:layout_width="111dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="증상: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/msym"
                android:layout_width="297dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mush_sim"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:text="닮은 버섯: "
                android:textColor="#000000" />


            <TextView
                android:id="@+id/msim"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:textColor="#3C5EFF" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

