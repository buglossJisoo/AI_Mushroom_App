<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_baseline_room_24"
                tools:ignore="VectorDrawableCompat" />

            <Switch
                android:id="@+id/switch11"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="6"
                android:bufferType="spannable"
                android:ellipsize="end"
                android:gravity="center|left"
                android:text="위치"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_baseline_folder_open_24"
                tools:ignore="VectorDrawableCompat" />

            <Switch
                android:id="@+id/switch12"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="6"
                android:text="저장소"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_baseline_camera_alt_24"
                tools:ignore="VectorDrawableCompat" />

            <Switch
                android:id="@+id/switch13"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="6"
                android:text="카메라"

                android:textOff="OFF"
                android:textOn="ON"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_baseline_text_fields_24"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center|fill_vertical"
                android:text="글자 크기"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#3F51B5"
                android:textColorHint="#3F51B5" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="2" />

        </LinearLayout>
        <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_marginTop="100dp"
                android:layout_width="50dp"
                android:layout_height="350dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/happy"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>